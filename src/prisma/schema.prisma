generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(cuid())
  username String
  password String
  email    String @unique
  tasks    Task[] @relation("UserTasks")
}

model Task {
  id           String   @id @default(cuid())
  task_title   String
  userId       String
  task_body    String
  reminder     DateTime
  schedule     DateTime
  createdAt    DateTime @default(now())
  taskCategory String
  user         User     @relation("UserTasks", fields: [userId], references: [id])
}
